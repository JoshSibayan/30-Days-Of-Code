import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    // Read user input, call and print result of recursive function
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int n = input.nextInt();
        int result = factorial(n);
        System.out.println(result);
    }
    
    // Function will recur as long as conditional is satisfied
    public static int factorial(int n) {
        if(n > 1) {
            return n * factorial(n - 1);
        } else {
        // Recursion bottoms out and function returns n
            return n;
        }
    }
    
}
